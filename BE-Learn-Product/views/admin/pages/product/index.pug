extends ../../layouts/default.pug  

block main 
    h1 Danh sách sản phẩm

    table.table.table-hover.table-sm 
        thead 
            tr 
                th STT 
                th Hình ảnh 
                th Tiêu đề
                th Giá
                th Trạng thái
                th Hành động
        tbody 
            each item, index in products
                tr 
                    td #{index + 1}
                    td 
                        img(
                            src=item.thumbnail
                            alt=item.title
                            width="100"
                        )
                    td #{item.title}
                    td #{item.price}$
                    td 
                        a.badge.badge-success(href="#") Hoạt động 
                    td 
                        button.btn.btn-warning.btn-sm Sửa
                        button.btn.btn-danger.btn-sm Xoá
